<!DOCTYPE html>
<html>
	<head>
		<title>IBEST FileBox | <%= content_for?(:title) ? yield(:title) : "Data sharing project" %></title>
		
		<%= stylesheet_link_tag "jquery.fileupload-ui", "application", "redmond/jquery-ui-1.8.12.custom" %>
		
		<%= javascript_include_tag "jquery-1.5.1.min", "jquery-ui-1.8.12.custom.min" %>
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag "rails" %>
		

		<%= csrf_meta_tag %>
		<%= yield(:head) %>
	</head>
	<body>
		<div id="page">
			<div class="header_wrapper">
				<div class="logo">
					<%= link_to image_tag("filebucket-logo.png", :border => 0), root_url %>
				</div>
				<div id="login_user_status">
					<% if user_signed_in? %>
					<%= current_user.email  %>
					|
					<%= link_to "Edit account", edit_user_registration_path %>
					|
					<%= link_to "Sign out", destroy_user_session_path %>
					<% else %>
					<em>Not Signed in.</em>
					<%= link_to 'Sign in', new_user_session_path%>
					or
					<%= link_to 'Sign up', new_user_registration_path%>
					<% end %>
				</div>
			</div>
			<%= render :partial => "shared/menu" %>
			<div id="container">
				<% flash.each do |name, msg| %>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>
				<% end %>
				<%= content_tag :h1, yield(:title) if show_title? %>
				<%= yield %>
			</div>
		</div>
