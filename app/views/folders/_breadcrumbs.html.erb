<% if user_signed_in? %>
<div id="breadcrumbs">
	<% if @current_folder %>
	<%= link_to "Home Directory", folders_path %>
	<% @current_folder.ancestors.reverse.each do |folder| %>
	» <%= link_to folder.name, folder_path(folder) %>
	<% end %>
	» <%= @current_folder.name %>
	<% else %>
	Home Directory
	<% end %>
</div>
<% end %>
