<% title "Invite someone to join" %>

<%= form_for @invite do |f| %>
  <%= f.error_messages %>
	<p>Enter the email address and an optional message for the person you wish to invite.</p>

  <p>
    <%= f.label :invited_user_email, "Email address" %><br>
    <%= f.text_field :invited_user_email %>
  </p>
   
  <p>
		<%= f.label :message, "Optional message" %><br>
		<%= f.text_area :message %>
  </p>

  <%= f.submit "Send Invitation" %>
<% end %>

